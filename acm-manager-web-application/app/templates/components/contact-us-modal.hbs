<div id="contact-us-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Contact Us</h4>
      </div>
    
      <form id="contact-us-form" class="form-margin">
        {{generic-form-field
          required=false
          idPrefix="contact-us"
          label="First Name"
          formName="first"
          placeholder="John"
        }}
        {{generic-form-field
          required=false
          idPrefix="contact-us"
          label="Last Name"
          formName="last"
          placeholder="Doe"
        }}
      
        {{email-form-field
          idPrefix="contact-us"
          placeholder="Your email"
          pattern="^.+@.+\..+$"
        }}
        
        {{textarea-form-field
          idPrefix="contact-us"
          placeholder="Your Message"
        }}
        
        <div class="modal-footer">
          {{modal-buttons submit="Send"}}
        </div>
      </form>
    </div>
  </div>
</div>
