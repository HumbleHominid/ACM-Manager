<div id="add-user-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add User</h4>
      </div>

      <form class="form-margin" onsubmit={{action 'createAccount'}}>
        {{f-name-form-field idPrefix="add-user"}}
        {{l-name-form-field idPrefix="add-user"}}
      
        {{email-form-field idPrefix="add-user"}}
        {{email-form-field idPrefix="add-user-confirm" placeholder="Confirm Email"}}

        {{#if errorMessage}}
          <p>{{errorMessage}}</p>
        {{/if}}
        
        <div class="modal-footer">
          {{modal-buttons}}
        </div>
      </form>
    </div>
  </div>
</div>
