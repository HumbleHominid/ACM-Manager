{{#generic-modal
  modalPrefix=modalPrefix
  first=first
  title="Log In"
  formAction=(action 'authenticate')
}}
  {{email-form-field
    hasFeedback=false
    idPrefix=modalPrefix
  }}
  
  {{password-form-field
    hasFeedback=false
    idPrefix=modalPrefix
    pattern=".+"
    help=""
  }}
  
  {{generic-form-field
    hasFeedback=false
    idPrefix=modalPrefix
    required=false
    type="checkbox"
    formName="checkbox"
    class="pointer"
    label="Remember Me"
  }}
  
  <div class="modal-footer">
    {{#modal-buttons}}
      <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#create-account-modal">Create Account</button>
    {{/modal-buttons}}
  </div>
{{/generic-modal}}
