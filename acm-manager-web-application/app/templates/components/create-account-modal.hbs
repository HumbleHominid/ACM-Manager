{{#generic-modal
  modalPrefix=modalPrefix
  first=first
  title="Create Account"
  formAction=(action 'createAccount')
}}
  {{generic-form-field
    idPrefix=modalPrefix
    label="First Name"
    formName="first"
    placeholder="John"
  }}
  {{generic-form-field
    idPrefix=modalPrefix
    label="Last Name"
    formName="last"
    placeholder="Doe"
  }}

  {{email-form-field
    idPrefix=modalPrefix
    help="Please use your mtech.edu email account"
  }}
  {{email-form-field
    idPrefix=(concat modalPrefix '-confirm')
    placeholder="Confirm Email"
    label="Confirm Email"
  }}
  
  {{password-form-field
    idPrefix=modalPrefix
  }}
  {{password-form-field
    idPrefix=(concat modalPrefix '-confirm')
    placeholder="Confirm Password"
    label="Confirm Password"
    help=""
  }}

  <div class="modal-footer">
    {{modal-buttons}}
  </div>
{{/generic-modal}}
