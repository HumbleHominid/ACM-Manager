<div class="post-overlay__contents">
  <h3>Contact Us</h3>
  
  <form class="form-horizontal">
    {{f-name-form-field}}

    {{l-name-form-field}}

    {{email-form-field id='senderEmail' placeholder='Sender Email'}}

    {{password-form-field id='password' placeholder='Password'}}

    <div class="form-group">
      <label>Message</label>
      <textarea class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
      <button {{action "onSubmitButtonPress"}} type="submit" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-send" aria-hidden="true"/> Send</button>
      <button {{action "onCancelButtonPress"}} type="button" class="btn btn-danger btn-xs pull-right"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"/> Cancel</button>
    </div>
  </form>
</div>