<nav class="navbar navbar-default navbar-static-top container-fluid">
  <div class="navbar-header">
    <a class="navbar__brand" >
      <img class="navbar__brand__image" alt="MTA Brand" src="./MTA.png">
    </a>
  </div>
  <ul class="nav nav-pills pills__margin-top">
    <li class={{if (is-active-route currentPath 'home') "active" ""}} role="presentation">
      {{#link-to "home"}}<span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>{{/link-to}}
    </li>
    <li class={{if (is-active-route currentPath 'events') "active" ""}} role="presentation">
      {{#link-to "events"}}<span class="glyphicon glyphicon-calendar" aria-hidden="true"> Events</span>{{/link-to}}
    </li>
    <li class="pull-right" role="presentation">
      <button {{action "showContactUs" bubbles=false}} type="button" class="btn btn-info navbar-btn__small"><span class="glyphicon glyphicon-envelope" aria-hidden="true"/> Contact Us</button>
    </li>

    {{#if loggedIn}}
      <li class={{if (is-active-route currentPath 'files') "active" ""}} role="presentation">
        {{#link-to "files"}}<span class="glyphicon glyphicon-file" aria-hidden="true"> Files</span>{{/link-to}}
      </li>
      <li class={{if (is-active-route currentPath 'officers') "active" ""}} role="presentation">
        {{#link-to "officers"}}<span class="glyphicon glyphicon-sunglasses" aria-hidden="true"> Officers</span>{{/link-to}}
      </li>
      <li class="pull-right" role="presentation">
        <iframe src="https://discordapp.com/widget?id=221463858068324354&theme=dark" width="350" height="70" allowtransparency="true" frameborder="0"></iframe>
      </li>
      <li class="pull-right" role="presentation">
        <button type="button" class="btn btn-warning navbar-btn__small"><span class="glyphicon glyphicon-log-out" aria-hidden="true"/> Log Out</button>
      </li>
      <li class="pull-right" role="presentation">
        <p class="navbar-text">Logged in as {{#link-to "account"}}{{user.fName}} {{user.lName}} <span class="glyphicon glyphicon-user" aria-hidden="true"/>{{/link-to}}</p>
      </li>

      {{#if (is-admin user.type)}}
        <li class={{if (is-active-route currentPath 'fees') "active" ""}} role="presentation">
          {{#link-to "fees"}}<span class="glyphicon glyphicon-piggy-bank" aria-hidden="true"> Fees</span>{{/link-to}}
        </li>
        <li role="presentation">
          <button {{action "showAddUser" bubbles=false}} type="button" class="btn btn-default navbar-btn__small"><span class="glyphicon glyphicon-plus" aria-hidden="true"/> Add User</button>
        </li>
        <li role="presentation">
          <button {{action "showRemoveUser" bubbles=false}} type="button" class="btn btn-default navbar-btn__small"><span class="glyphicon glyphicon-minus" aria-hidden="true"/> Remove User</button>
        </li>
      {{/if}}
    {{else}}
      <li class="pull-right" role="presentation">
        <button {{action "showLogIn" bubbles=false}} type="button" class="btn btn-default navbar-btn__small"><span class="glyphicon glyphicon-log-in" aria-hidden="true"/> Log In</button>
      </li>
    {{/if}}

  </ul>
</nav>

{{#if isOverlayActive}}
  {{#if displayLogIn}}
    {{log-in-overlay submitCallback=(action 'logIn') cancelCallback=(action 'closeOverlay') createAccountCallback=(action 'showCreateAccount') resetPasswordCallback=(action 'showResetPassword')}}
  {{/if}}

  {{#if displayContactUs}}
    {{contact-us-overlay cancelCallback=(action 'closeOverlay')}}
  {{/if}}

  {{#if displayAddUser}}
    {{add-user-overlay formData=formData cancelCallback=(action 'closeOverlay')}}
  {{/if}}

  {{#if displayRemoveUser}}
    {{remove-user-overlay cancelCallback=(action 'closeOverlay')}}
  {{/if}}

  {{#if displayCreateAccount}}
    {{create-account-overlay cancelCallback=(action 'closeOverlay')}}
  {{/if}}

  {{#if displayResetPassword}}
    {{reset-password-overlay cancelCallback=(action 'closeOverlay')}}
  {{/if}}
{{/if}}
