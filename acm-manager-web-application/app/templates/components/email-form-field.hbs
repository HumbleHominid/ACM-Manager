<label for="{{idPrefix}}-email" class="col-sm-2 control-label">{{placeholder}}</label>
<div class="col-sm-10">
  {{input type="email" class="form-control" id=(string-append idPrefix "-email") placeholder=placeholder value=value required="required"}}
  <span id="{{idPrefix}}-email_span" class="glyphicon glyphicon-warning-sign form-control-feedback" aria-hidden="true"></span>
</div>
