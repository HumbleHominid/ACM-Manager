<div class="page-header">
  <h1>Events</h1>
</div>

<div class="well well-lg">
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    {{#each-in events.past as |key value|}}
    <div class="panel panel-default" id="panel{{key}}">
      <div class="panel-heading" role="tab" data-toggle="collapse" data-parent="#accordion" href="#collapse{{key}}" aria-expanded="true" aria-controls="collapse{{key}}">
        <h4 class="panel-title">
          <a role="button">
            {{value.name}}
          </a>
        </h4>
      </div>
      <div id="collapse{{key}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="panel{{key}}">
        <div class="panel-body">
          {{list-item-event list=false horizontal=true collapsable=false data=value}}
        </div>
      </div>
    </div>
    {{/each-in}}
  </div>
</div>

{{outlet}}
