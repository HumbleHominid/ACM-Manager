<div class="page-header">
  <h1>Events</h1>
</div>

<div class="btn-group" role="group" aria-label="">
  <button disabled={{if filterTime "disabled" ""}} type="button" class="btn btn-default" {{action 'filterTime'}}>Time</button>
  <button disabled={{if filterType "disabled" ""}} type="button" class="btn btn-default" {{action 'filterType'}}>Type</button>
</div>
<br><br>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-primary">
    <div class="panel-heading" role="tab">
      <h4 class="panel-title">
        Past
      </h4>
    </div>
    {{#if filterTime}}
      {{#each-in events.past as |key value|}}
        {{event-list-item-route suffix="events-route-past" data=value key=key}}
      {{/each-in}}
    {{/if}}
    {{#if filterType}}
      {{#each-in events.pastTyped as |key value|}}
        <div class="list-group-item list-group-item-info unselectable pointer" data-toggle="collapse" data-target="#upcoming-events-type-{{key}}-events-route-past" aria-expaneded="false">
          {{value.name}} <span class="glyphicon glyphicon-menu-down" />
        </div>
        <div id="upcoming-events-type-{{key}}-events-route-past" class="collapse" aria-expanded="false">
          {{#each-in value.events as |key value|}}
            {{event-list-item-route suffix="events-route-past" data=value key=key accordian=false}}
          {{/each-in}}
        </div>
      {{/each-in}}
    {{/if}}    
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading" role="tab">
      <h4 class="panel-title">
        Future
      </h4>
    </div>
    {{#if filterTime}}
      {{#each-in events.future as |key value|}}
        {{event-list-item-route suffix="events-route-future" data=value key=key}}
      {{/each-in}}
    {{/if}}
    {{#if filterType}}
      {{#each-in events.futureTyped as |key value|}}
        <div class="list-group-item list-group-item-info unselectable pointer" data-toggle="collapse" data-target="#upcoming-events-type-{{key}}-events-route-future" aria-expaneded="false">
          {{value.name}} <span class="glyphicon glyphicon-menu-down" />
        </div>
        <div id="upcoming-events-type-{{key}}-events-route-future" class="collapse" aria-expanded="false">
          {{#each-in value.events as |key value|}}
            {{event-list-item-route suffix="events-route-future" data=value key=key accordian=false}}
          {{/each-in}}
        </div>
      {{/each-in}}
    {{/if}}    
  </div>
</div>

{{outlet}}
